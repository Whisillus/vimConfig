{
    "suggest.noselect": true,
    "languageserver": {
         "ccls": {
             "command": "ccls",
             "filetypes": ["c", "cpp", "cuda"],
             "rootPatterns": [".git/", "build/"],
             "initializationOptions": {
                 "compilationDatabaseDirectory": "build",
                 "highlight": {
                     "lsRanges": true
                 },
                 "cache": {
                     "directory": "/tmp/ccls"
                 },
                 "cliend": {
                     "snippetSupport": true
                 },
                 "index": {
                     "onChange": true
                 }
             }
        }
    },
    "python": {
        "analysis": {
            "typeCheckingMode": "off"
        }
    }
}
